<link rel="stylesheet" type="text/css" href="/css/shopcategory.css">
{{>_shopnavbar}}
{{>_flashmsg}}
{{#if shop}}
<div class="items">
    {{#if user.isAdmin}}
    {{#each shop}}
    <div class="card" style="width: 20rem;">
        <img class="card-img-top"
            src="https://images.unsplash.com/photo-1517303650219-83c8b1788c4c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=bd4c162d27ea317ff8c67255e955e3c8&auto=format&fit=crop&w=2691&q=80"
            alt="Card image cap">
        <div class="card-body">
            <h4 class="card-title">{{name}}</h4>
            <h6 class="card-subtitle mb-2 text-muted">${{price}}</h6>
            <p class="card-text">{{description}}</p>
            <p><button><a href='addToCart/{{id}}'>Add to Cart</a></button></p>
            <a href="/admin/editproducts/" class="card-link">Edit</a>
            <a href="/admin/delete/{{id}}" class="card-link" data-toggle="confirmation"
                data-title="Confirm delete?">Delete</a>
        </div>
    </div>
    {{/each}}
    {{else}}
    {{#each shop}}
    <div class="card" style="width: 20rem;">
        <img class="card-img-top"
            src="https://images.unsplash.com/photo-1517303650219-83c8b1788c4c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=bd4c162d27ea317ff8c67255e955e3c8&auto=format&fit=crop&w=2691&q=80"
            alt="Card image cap">
        <div class="card-body">
            <h4 class="card-title">{{name}}</h4>
            <h6 class="card-subtitle mb-2 text-muted">${{price}}</h6>
            <p class="card-text">{{description}}</p>
            <p><button><a href='addToCart/{{id}}'>Add to Cart</a></button></p>
        </div>
    </div>
    {{/each}}
    {{/if}}
</div>
{{else}}
<div class="main">
<h3>Products will be added soon!!</h3>
</div>
{{/if}}