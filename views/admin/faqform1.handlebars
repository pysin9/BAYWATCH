<body class="login-page sidebar-collapse">
    <div class="page-header header-filter" style="background-image: url('/img/background4.jpg');">
        <div class="container">
            <div class="row"></div>
            <div class="card card-login">
                <form action="/admin/addqns" method='POST' id="form">
                    <h2 class="card-title text-center">Add FAQ</h2>
                    <div class="card-body">
                        <div class="row" style='margin-left: 250px'>
                            <div class="col-lg-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons"  style="font-size:50px">live_help</i>
                                        </span>
                                    </div>
                                    <input type="text" id="qns" name="qns" class="form-control"
                                        placeholder='Enter user query' required>
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons" style="font-size:50px">question_answer</i>
                                        </span>
                                    </div>
                                    <textarea type="textarea" id="ans" name="ans" class="form-control"
                                        placeholder='Enter answer to query' required rows='5'></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-round">Add</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
    </div>