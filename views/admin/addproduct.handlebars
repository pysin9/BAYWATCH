<body class="login-page sidebar-collapse">
    <div class="page-header header-filter"
        style="background-image: url('/img/login.jpeg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="card card-login">
                    <form class="form" method="post" action="/admin/addproducts">
                        <h2 class="card-title text-center">Add Products</h2>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-9">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons" style="font-size:24px">email</i>
                                            </span>
                                        </div>
                                        <input type="name" id="name" name="name" class="form-control"
                                            placeholder="Product Name..">
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">lock_outline</i>
                                            </span>
                                        </div>
                                        <input type="text" id="price" name="price" class="form-control"
                                            placeholder="Price...">
                                    </div>
                                    <div class="input-group">
                                        <select name="category" class="dropdown nav-item">
                                            <option name ="fruits" id="" value="fruits">Fruits</option>
                                            <option value="saab">Saab</option>
                                            <option value="fiat">Fiat</option>
                                            <option value="audi">Audi</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <input type="file" id="posterUpload" name="imageUpload"
                                        accept="image/png,image/jpeg,image/jpg,image/gif">
                                    <img id="picture" src="/img/no-image.jpg" alt=""
                                        class="border img-thumbnail img-fluid" style="height:95%;width:100%">
                                    <input id="images" type="hidden" name="images">
                                    <div class="font-weight-bold text-danger small" id="imageErr" style="display:none">
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-round">Create</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
<script>
    $('#imageUpload').on('change', function () {
        let image = $("#imageUpload")[0].files[0];
        let formdata = new FormData();
        formdata.append('imageUpload', image);
        $.ajax({
            url: '/admin/upload',
            type: 'POST',
            data: formdata,
            contentType: false,
            processData: false,
            'success': (data) => {
                $('#picture').attr('src', data.file);
                $('#images').attr('value', data.file);// sets posterURL hidden field
                if (data.err) {
                    $('#imageErr').show();
                    $('#imageErr').text(data.err.message);
                } else {
                    $('#imageErr').hide();
                }
            }
        });
    });
</script>