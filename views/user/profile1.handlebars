<body class="login-page sidebar-collapse">
    <div class="page-header header-filter"
        style="background-image: url('/img/background2.jpg');">
        <div class="container">
            <div class="row" ></div>
                <div class="card card-login">
                    <form class="form" action="/user/saveProfile/{{user.id}}?_method=PUT" method="post" id='profile'>
                    <input type="hidden" name="_method" value="PUT">
                        <h2 class="card-title text-center">Edit Profile</h2>
                        {{#if nosignin}}
                        <button type="button" class="btn btn-info" style='margin-left: 450px' onclick='signin()'>Click For Sign In Bonus!</button>
                        {{/if}}
                        <div class="card-body">
                            <div class="row" style='margin-left: 250px'>
                                <div class="col-lg-8 col-md-5">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">redeem</i>
                                            </span>
                                        </div>
                                        <input type="text" id="points" name="points" class="form-control"
                                            value="{{user.points}}" readonly>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons" style="font-size:24px">supervisor_account</i>
                                            </span>
                                        </div>
                                        <input type="text" id="name" name="name" class="form-control"
                                            value="{{user.name}}" placeholder="Enter your username">
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">email</i>
                                            </span>
                                        </div>
                                        <input type="text" id="email" name="email" class="form-control"
                                            value="{{user.email}}" placeholder="Enter your email">
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">home</i>
                                            </span>
                                        </div>
                                        <input type="text" id="address" name="address" class="form-control"
                                            value="{{user.address}}" placeholder="Enter your address">
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">perm_phone_msg</i>
                                            </span>
                                        </div>
                                        <input type="text" id="phone" name="phone" class="form-control"
                                           value="{{user.phone}}" placeholder="Enter your phone number">
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">credit_card</i>
                                            </span>
                                        </div>
                                        <input type="text" id="bankName" name="bankName" class="form-control"
                                            value="{{user.bankName}}" placeholder="Enter your bank card name">
                                    </div>
                                     <div class="input-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text">
                                                <i class="material-icons">credit_card</i>
                                            </span>
                                        </div>
                                        <input type="text" id="bankNo" name="bankNo" class="form-control"
                                            value="{{user.bankNo}}" placeholder="Enter your bank number">
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-round">Submit</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
<script>
    function signin(){
        alert('Thanks you for Signing in! Bonus 30 points!')
        var points  = parseInt(document.getElementById('points').value);
        points += 30;
        document.getElementById('points').value = Number(points);
        document.forms["profile"].submit();
    }
</script>