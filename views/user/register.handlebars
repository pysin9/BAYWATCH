<body class="login-page sidebar-collapse">
    <div class="page-header header-filter"
        style="background-image: url('../assets/img/passenger.jpg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-10 ml-auto mr-auto">
                    <div class="card card-login">
                        <form id="signup-form-passenger" class="form" method="POST" action="signup_passenger">
                            <h2 class="card-title text-center">Register</h2>
                            <div class="card-body">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">face</i>
                                        </span>
                                    </div>
                                    <input type="text" id="username" name="username" class="form-control"
                                        placeholder="Username...">
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons" style="font-size:24px">email</i>
                                        </span>
                                    </div>
                                    <input type="email" id="email" name="email" class="form-control"
                                        placeholder="Email...">
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons" style="font-size:24px">phone_iphone</i>
                                        </span>
                                    </div>
                                    <input type="tel" id="phone" name="phone" minlength="8" maxlength="8"
                                        class="form-control" placeholder="Phone Number...">
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                    </div>
                                    <input type="password" id="password" name="password" class="form-control"
                                        placeholder="Password...">
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                    </div>
                                    <input type="password" id="password" name="password" class="form-control"
                                        placeholder=" Confirm Password...">
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons" style="font-size:24px">home</i>
                                        </span>
                                    </div>
                                    <input type="address" id="address" name="address" class="form-control"
                                        placeholder="Address...">
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-round">Sign Up</button>
                            </div>
                            <div class="text-center">
                                <a href="/Login" class="btn btn-link">Already have a account?<u>Login here!</u></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>