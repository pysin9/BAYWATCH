<body class="login-page sidebar-collapse">
    <div class="page-header header-filter"
        style="background-image: url('/img/login.jpeg'); background-size: cover; background-position: top center;">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-md-10 ml-auto mr-auto">
                    <div class="card card-login">
                        <form class="form" method="post" action="/user/login">
                            <h2 class="card-title text-center">Login</h2>
                            <div class="card-body">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons" style="font-size:24px">email</i>
                                        </span>
                                    </div>
                                    <input type="email" id="email" name="email" class="form-control"
                                        placeholder="Email...">
                                </div>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="material-icons">lock_outline</i>
                                        </span>
                                    </div>
                                    <input type="password" id="password" name="password" class="form-control"
                                        placeholder="Password...">
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success btn-round">Login</button>
                            </div>
                            <div class="text-center">
                                <a href="/Register" class="btn btn-link">Don't have an account?<u>Register now!</u></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>